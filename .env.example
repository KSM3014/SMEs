# ============================================
# SME Investor Service - Environment Variables
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sme_investor_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_DIALECT=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# data.go.kr Credentials
DATAGOER_EMAIL=your_email@example.com
DATAGOER_PASSWORD=your_secure_password
DATAGOER_LOGIN_URL=https://www.data.go.kr/member/login.do
DATAGOER_MYPAGE_URL=https://www.data.go.kr/mypage/myapi.do
DATAGOER_PUBLIC_API_URL=https://www.data.go.kr/tcs/dss/selectDataSetList.do

# Security Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_random_string_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_aes256_encryption_key_32_chars_exactly_here
ENCRYPTION_IV=your_16_char_iv

# Session Pool Configuration
SESSION_POOL_SIZE=5
SESSION_REFRESH_INTERVAL=1800000
SESSION_MAX_RETRIES=5
SESSION_RETRY_DELAY=5000

# OCR Configuration
TESSERACT_LANG=eng
TESSERACT_OEM=1
TESSERACT_PSM=7
CAPTCHA_CONFIDENCE_THRESHOLD=0.80

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_VIEWPORT_WIDTH=1920
PUPPETEER_VIEWPORT_HEIGHT=1080

# API Collection Configuration
API_COLLECTION_BATCH_SIZE=20
API_COLLECTION_DELAY=2000
API_COLLECTION_TIMEOUT=120000
PUBLIC_API_PAGE_SIZE=100

# Scheduler Configuration (cron format)
CRON_PUBLIC_API_REFRESH=0 3 * * *
CRON_MY_API_REFRESH=0 9 * * 1
CRON_DAILY_PROPOSAL=0 10 * * *

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_ERROR_FILE_PATH=./logs/error.log

# DART API (금융감독원 전자공시시스템)
# 신청: https://opendart.fss.or.kr/
DART_API_KEY=your_dart_api_key_here

# Hometax API (국세청 홈택스 - 사업자등록번호 진위확인)
# 신청: https://www.data.go.kr/ (공공데이터포털)
HOMETAX_API_KEY=your_hometax_api_key_here
DATA_GO_KR_SERVICE_KEY=your_data_go_kr_service_key_here

# External Research APIs (Optional)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here
PRODUCTHUNT_API_KEY=your_producthunt_api_key_here

# LLM Configuration (for service proposals and analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Frontend Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
